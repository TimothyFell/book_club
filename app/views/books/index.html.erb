<section class="top_books">
  <h2>Highest Rated Books</h2>
  <div class="flex_row_3">
  <% @top_rated_books.each do |top_rated_book| %>
    <div id="top_book_<%= top_rated_book.id %>" class="book">
      <div class="book_cover_container"><img src="<%= top_rated_book.img_url %>" alt="" class="book_cover"></div>
      <div class="book_text">
        <h3><a href="/books/<%= top_rated_book.id %>"><%= top_rated_book.title %></a> <span class="avg_rating">(<%= rounded_1(top_rated_book.reviews.avg_rating) %>)</span></h3>
        <h4>Authors:
          <% top_rated_book.authors.each do |author| %>
            <% if author != top_rated_book.authors.last %>
              <a href="/authors/<%= author.id %>"><%= author.name %></a>,
            <% else %>
              <a href="/authors/<%= author.id %>"><%= author.name %></a>
            <% end %>
          <% end %>
        </h4>
        <p>Pages: <%= top_rated_book.page_num %></p>
        <p>Published: <%= top_rated_book.year_published %> </p>
        <p><%= top_rated_book.reviews.count %> Reviews</p>
      </div>
    </div>
  <% end %>
  </div>
</section>
<section class="low_books">
  <h2>Lowest Rated Books</h2>
  <div class="flex_row_3">
  <% @low_rated_books.each do |low_rated_book| %>
